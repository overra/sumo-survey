//- h1.md-headline Questions &amp; Answers
div(layout='row' layout-sm='column' layout-align='stretch center' layout-wrap)
  div(ng-repeat='question in dashboard.questions' flex='50' flex-sm='100')
    md-card
      md-card-content.question
        header
          h2.md-title(ng-bind='question.question')
          h3.md-subhead 
            ng-pluralize(
              count='dashboard.getTotalAnswers(question)'
              when='{"0": "No one has answered.", "one": "One person has answered.", "other": "{} people have answered."}'  
            )
        .choice(ng-repeat='choice in question.choices') 
          div(layout='row')
            span {{choice.choice}}
            span(flex) 
            span {{dashboard.getTotalOfChoice(question, choice)}} ({{dashboard.getPercentage(question, choice)}}%)
          md-progress-linear(md-mode='determinate' value='{{dashboard.getPercentage(question, choice)}}')
